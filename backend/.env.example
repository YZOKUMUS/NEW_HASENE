# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection
# Local MongoDB için:
# MONGODB_URI=mongodb://localhost:27017/hasene_db
# MongoDB Atlas (cloud) için:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hasene_db

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT Secret (en az 32 karakter uzunluğunda güçlü bir string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5500
