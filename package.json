{
  "name": "hasene-arapca-dersi",
  "version": "1.0.0",
  "description": "Arapça öğrenmeyi eğlenceli hale getiren interaktif eğitim oyunu",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "docs": "jsdoc -c jsdoc.config.json",
    "docs:serve": "jsdoc -c jsdoc.config.json && npx serve out",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\"",
    "code:check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "arapça",
    "öğrenme",
    "oyun",
    "pwa",
    "education"
  ],
  "author": "YZOKUMUS",
  "license": "ISC",
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.1",
    "jsdoc": "^4.0.2",
    "prettier": "^3.7.1",
    "vitest": "^1.0.0",
    "vm2": "^3.10.0"
  }
}
